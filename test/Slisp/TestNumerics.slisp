(import lib/unittest)

# basic unit tests

# tests
(def test-add ()
  (and 
    (== 1 (+ 1))
    (== 5 (+ 5))
    (== 2 (+ 1 1))
    (== 3 (+ 1 1 1))))
    
(def test-mult ()
  (and
    (== 1 (* 1))
    (== 5 (* 5))
    (== 6 (* 2 3))))
    
(def has-error? (expr)
  (try
    (begin
      (unquote expr)
      false)
    true))
    
(def test-div ()
  (and 
    (== 1 (/ 1 1))
    (== 1 (/ 5 5))
    (== 0 (/ 1 2))
    (== 1 (/ 3 2))
    (== 2 (/ 6 3))
    (== 0 (/ 0 5))
    (has-error? '(/ 1 0))
    (== 4 (/ 24 2 3))))
    